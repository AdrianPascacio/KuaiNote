<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Reminder_relative_item_view"
    android:background="@drawable/reminder_popup_back_layout"

    >
    <LinearLayout
        android:id="@+id/Layout_Reminder_Main"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/reminder_popup_layout"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Label_Reminder_Setter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:ems="10"
            android:inputType="text"
            android:text="Reminder"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Note_title_in_Reminder_Setter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Label_Reminder_Setter"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:inputType="text"
            android:text="Note Title"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            >
            <LinearLayout
                android:id="@+id/Layout_Set_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="fill_horizontal|center_vertical"
                >
                <TextView
                    android:id="@+id/Reminder_Label_Set_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:text="Set Date"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:gravity="fill_horizontal|center_vertical"
                    >

                    <NumberPicker
                        android:id="@+id/Reminder_day_number_picker"
                        android:layout_width="30dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:theme="@style/Custom_Number_Picker"
                        android:textAlignment="textEnd"
                        >
                    </NumberPicker>
                    <TextView
                        android:layout_width="7dp"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:text="/"
                        android:textStyle="bold"
                        android:textColor="@color/gray_neutral_trans"
                        android:textSize="20dp"
                        >
                    </TextView>
                    <NumberPicker
                        android:id="@+id/Reminder_month_number_picker"
                        android:layout_width="45dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:theme="@style/Custom_Number_Picker"
                        android:textAlignment="center"
                        >
                    </NumberPicker>
                    <TextView
                        android:layout_width="7dp"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:text="/"
                        android:textStyle="bold"
                        android:textColor="@color/gray_neutral_trans"
                        android:textSize="20dp"
                        >
                    </TextView>
                    <NumberPicker
                        android:id="@+id/Reminder_year_number_picker"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:theme="@style/Custom_Number_Picker"
                        android:textAlignment="textStart"
                        >
                    </NumberPicker>
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="30dp"
                android:layout_height="10dp"
                >
            </Space>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/Reminder_Label_Set_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="text"
                    android:text="Set Time"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:gravity="fill_horizontal|center_vertical"
                    >

                    <NumberPicker
                        android:id="@+id/Reminder_hour_number_picker"
                        android:layout_width="28dp"
                        android:layout_height="150dp"
                        android:layout_weight="2"
                        android:theme="@style/Custom_Number_Picker"
                        android:textAlignment="textEnd"
                        >
                    </NumberPicker>
                    <TextView
                        android:layout_width="7dp"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:text=":"
                        android:textStyle="bold"
                        android:textColor="@color/gray_neutral_trans"
                        android:textSize="20dp"
                        >
                    </TextView>
                    <NumberPicker
                        android:id="@+id/Reminder_minute_number_picker"
                        android:layout_width="30dp"
                        android:layout_height="150dp"
                        android:layout_weight="2"
                        android:theme="@style/Custom_Number_Picker"
                        android:textAlignment="textStart"
                        >
                    </NumberPicker>
                    <NumberPicker
                        android:id="@+id/Reminder_meridian_number_picker"
                        android:layout_width="40dp"
                        android:layout_height="150dp"
                        android:layout_weight="2"
                        android:theme="@style/Custom_Number_Picker"
                        >
                    </NumberPicker>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            >
            <FrameLayout
                android:id="@+id/Reminder_Ok_Button"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_below="@+id/Note_title_in_Reminder_Setter"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/timer_icon_1"
                android:backgroundTint="#55BCD1"
                />

            <Space
                android:layout_width="33dp"
                android:layout_height="0dp"
                >
            </Space>

            <FrameLayout
                android:id="@+id/Reminder_Cancel_Button"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_below="@+id/Note_title_in_Reminder_Setter"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/timer_off_icon_3"
                android:backgroundTint="@color/salmon_light"
                />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            >
            <Space
                android:layout_width="match_parent"
                android:layout_height="140dp"
                >
            </Space>
            <View
                android:id="@+id/divider1"
                android:layout_width="130dp"
                android:layout_height="2dp"
                android:background="@color/matcha_1_trans" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="49dp"
                >
            </Space>
            <View
                android:id="@+id/divider2"
                android:layout_width="130dp"
                android:layout_height="2dp"
                android:background="@color/matcha_1_trans" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom|left"
                >
                <LinearLayout
                    android:id="@+id/Layout_Repeat_Ghost"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center|center_horizontal"
                    >

                    <FrameLayout
                        android:id="@+id/FL_Repeat_Icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="3dp"

                        android:background="@drawable/repeat_never_2"
                        android:backgroundTint="@color/gray_neutral_trans"
                        >

                    </FrameLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="40dp"
            android:layout_height="10dp"
            >
        </Space>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginVertical="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            >
            <Space
                android:layout_width="match_parent"
                android:layout_height="140dp"
                >
            </Space>
            <View
                android:id="@+id/divider3"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@color/matcha_1_trans" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="49dp"
                >
            </Space>
            <View
                android:id="@+id/divider4"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@color/matcha_1_trans" />



        </LinearLayout>



    </LinearLayout>

    <LinearLayout

        android:layout_below="@+id/Layout_Reminder_Main"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center"
        >

            <TextView
                android:id="@+id/Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:ems="10"
                android:inputType="text"
                android:text="Repeat"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>